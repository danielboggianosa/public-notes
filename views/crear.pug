    footer
        script.
            $(document).ready(()=>$("input[name='titulo']").focus())
            var success = false
            $("#nuevaNota").on('submit', (e)=>{
                e.preventDefault()
                var data = {                
                    titulo: $("input[name='titulo']").val(),
                    contenido: $("textarea[name='contenido']").val(),
                }
                
                console.log(data)
                $.ajax({
                    url:"/api/notas",
                    type: "POST",
                    data: data,
                    success: (res)=>{
                        console.log(res)
                        $("#success").html(res.message)
                        $("#success").toggleClass('d-none')
                        if(res.success)
                            location.replace('/')
                    }
                })
            })
